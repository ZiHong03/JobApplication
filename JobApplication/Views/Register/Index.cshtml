@model JobApplication.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4 register-card">

        <h2 class="text-center mb-2">Create an Account</h2> 

        <form asp-action="Index" method="post"> <!--default go to the register index, and my register index will go to the login index-->

            <div class="form-group mb-3">
                <label>Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="e.g. 012-3456789" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label>Skills</label>
                <input asp-for="Skills" class="form-control" placeholder="e.g. C#, ASP.NET, SQL" />
            </div>

            <div class="form-group mb-3">
                <label>Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>User Type</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Role" value="JobSeeker" id="jobSeeker">
                    <label class="form-check-label" for="jobSeeker">
                        Job Seeker
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Role" value="Employer" id="employer">
                    <label class="form-check-label" for="employer">
                        Employer / Company
                    </label>
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary w-100 mb-3">Register</button>

            <div class="text-center">
                Already have an account?
                <a asp-action="Index" asp-controller="Login">Login here</a>
            </div>

        </form>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">@ViewBag.Success</div>
        }
    </div>
</div>
