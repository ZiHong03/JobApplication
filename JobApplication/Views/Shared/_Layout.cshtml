@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Job Application System</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Optional: custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4">
        <div class="container-fluid">

            <!-- Logo -->
            <a class="navbar-brand fw-bold" href="@Url.Action("Dashboard", "JobSeeker")">
                Job Application System
            </a>

            <!-- Mobile menu toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar items -->
            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- Left side -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "JobSeeker")">Find Jobs</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewApplication", "JobSeeker")">My Applications</a>
                    </li>
                </ul>

                <!-- Right side -->
                <ul class="navbar-nav">

                    @if (Context.Session.GetString("UserID") != null)
                    {
                        <!-- Profile Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#"
                               id="profileDropdown" role="button" data-bs-toggle="dropdown">

                                👤 @Context.Session.GetString("Name")
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Profile")">
                                        Profile
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" href="@Url.Action("ViewApplication", "JobSeeker")">
                                        My Applications
                                    </a>
                                </li>

                                <li><hr class="dropdown-divider" /></li>

                                <li>
                                    <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Login")">
                                        Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- If not logged in -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Login")">Login</a>
                        </li>
                    }

                </ul>
            </div>

        </div>
    </nav>


    <!-- Main Content -->
    <div class="container pb-5">
        @RenderBody()
    </div>


    <!-- Footer -->
    <footer class="text-center mt-5 mb-3 text-muted">
        <small>© @DateTime.Now.Year Job Application System</small>
    </footer>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
