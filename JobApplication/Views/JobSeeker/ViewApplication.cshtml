@model IEnumerable<JobApplication.Models.JobApplicationsModel>

@{
    ViewData["Title"] = "My Applications";
}

<h2>My Job Applications</h2>

@if (!Model.Any())
{
    <p>You have not applied for any jobs yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Job Title</th>
                <th>Company</th>
                <th>Applied On</th>
                <th>Status</th>
                <th>Detail</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.Job?.JobTitle</td>
                    <td>@app.Job?.CompanyName</td>
                    <td>@app.ApplyTime.ToString("yyyy-MM-dd")</td>
                    <td>
                        <span class="badge bg-secondary">
                            @app.Status
                        </span>
                    </td>

                    <td>
                        <form asp-action="Details" method="get">
                            <input type="hidden"
                                   name="jobID"
                                   value="@app.Job?.JobID" />

                            <button type="submit" class="btn btn-info btn-sm">
                                Detail
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
