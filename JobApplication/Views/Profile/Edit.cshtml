@model JobApplication.Models.UserModel

<div class="container mt-4">
    <h2>Edit Profile</h2>
    <hr />
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name: </label>
            <input type="text" class="form-control" name="Name" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email: </label>
            <input type="text" class="form-control" name="Email" value="@Model.Email" required />
        </div>
        <div class="mb-3">
            <label class="form-label"> Phone No: </label>
            <input type="text" class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Skills: </label>
            <textarea class="form-control" name="Skills" rows="4">@Model.Skills</textarea>
        </div>
        <button type="submit" class="btn btn-secondary">Save Changes</button>
        <a href="@Url.Action("Index","Profile")" class="btn btn-secondary">Cancel</a>
    </form>
</div>